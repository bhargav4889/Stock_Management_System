@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Purchase Invoice Details";

}
@using Stock_Management_System.UrlEncryption;
@using System.Globalization
@model Stock_Management_System.Areas.Invoices.Models.InvoiceModel.Purchase_Invoice_Model;

<link rel="stylesheet" href="~/css/detailsviewtablestyle.css">


<div class="container">
    <br />
    <div class="row">
        <!-- Left side - Back link -->
        <div class="col-2">
            <a asp-action="PurchaseInvoices" asp-controller="Invoice" class="text-decoration-none">
                <i class="fa fa-arrow-left" style="color:green; transform: scale(1.25);"> </i>
            </a>
        </div>

        <!-- Center - Invoice Details -->
        <div class="col-8 text-center">
            <h5>Invoice Details</h5>
        </div>

        <!-- Right side - PDF & Image Download button -->
        <div class="col-2 text-end">
            <ul class="list-unstyled d-flex justify-content-end">
                <li>
                    <form asp-action="PurchaseInvoiceDownload" asp-controller="Invoice" method="get">
                        <input type="hidden" value="@Model.PurchaseInvoiceId" name="Invoice_ID" />
                        <button type="submit" class="btn" data-bs-toggle="tooltip" data-bs-placement="top" title="Download PDF" style="transform: scale(1.15);">
                            <img src="~/img/icons/pdf.svg" alt="img">
                        </button>
                    </form>
                    <button type="submit" id="downloadImage" name="downloadType" value="img" class="btn" data-bs-toggle="tooltip" data-bs-placement="top" title="Download Image" style="transform: scale(1.15);">
                        <i class="fa fa-download"></i>
                    </button>
                </li>
               
            </ul>
        </div>
    </div>




    <br />
    <div class="table-responsive scrollable-table table-responsive-sm">
        <table class="table">

            <tr>
                <th>Date</th>
                <td id="purchaseDate">@Model.PurchaseInvoiceDate.ToString("dd/MM/yyyy")</td>
            </tr>
            <tr>
                <th>Customer Name</th>
                <td id="customerName">@Model.CustomerName</td>
            </tr>
            <tr>
                <th>Product Name</th>
                <td id="productName">@Model?.ProductName</td>
            </tr>
            <tr>
                <th>Bag</th>
                <td>@(string.IsNullOrWhiteSpace(Convert.ToString(Model?.Bags)) ? "--" : Model?.Bags)</td>
            </tr>
            <tr>
                <th>Bag Per Kg</th>
                <td>@(string.IsNullOrWhiteSpace(Convert.ToString(Model?.BagPerKg)) ? "--" : Model?.BagPerKg)</td>
            </tr>
            <tr>
                <th>Weight</th>
                <td>@Model?.TotalWeight</td>
            </tr>
            <tr>
                <th>Product Price(₹)</th>
                <td>@Model?.ProductPrice.ToString("C", new CultureInfo("hi-IN")))</td>
            </tr>
            <tr>
                <th>Total Price(₹)</th>
                <td>@Model?.TotalPrice.ToString("C", new CultureInfo("hi-IN")))</td>
            </tr>
            <tr>
                <th>Vehicle Type</th>
                <td>@Model?.VehicleName</td>
            </tr>
            <tr>
                <th>Vehicle No.</th>
                <td>@Model?.VehicleNo</td>
            </tr>
            <tr>
                <th>Driver Name</th>
                <td>@Model?.DriverName</td>
            </tr>
            <tr>
                <th>Tolat Name</th>
                <td>@Model?.TolatName</td>
            </tr>
            <tr>
                <th>Stock Grade</th>
                <td>@(string.IsNullOrWhiteSpace(Model?.ProductGrade) ? "--" : Model?.ProductGrade)</td>
            </tr>

      


        </table>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.3.3/html2canvas.min.js"></script>

@section Scripts {
    <script src="/js/Section/invoice/p/details.js"></script>
}