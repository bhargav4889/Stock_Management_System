@{
    Layout = "_Layout_Login";
    ViewData["Title"] = "Login Page";
}

@model Stock_Management_System.Areas.Manage.Models.AdminDetailsModel;

<div class="account-content">
    <div class="login-wrapper">


        <div class="login-content">
            <div class="login-userset">
                @if (TempData["ErrorMsg"] != null)
                {
                    <input type="hidden" id="toastrErrorMessage" value="@TempData["ErrorMsg"]" />
                }
                <div class="login-logo">
                    <img src="~/img/LOGO_MAIN.png" style="width:auto" alt="img">
                </div>
                <div class="login-userheading">
                    <h3>Login</h3>
                    <h4>Login to your System</h4>
                </div>
                <form asp-action="Login" asp-controller="Login">
                    <div class="form-login">
                        <label><span style="color:red;">*</span> Username</label>
                        <div class="form-addons">
                            <input type="text" asp-for="UserName" placeholder="Enter Username">
                            <img src="~/img/icons/users1.svg" alt="img">
                            <span style="color:red;" asp-validation-for="UserName"></span>
                        </div>
                    </div>
                    <div class="form-login">
                        <label><span style="color:red;">*</span> Password</label>
                        <div class="pass-group">
                            <input type="password" class="pass-input" asp-for="Password" placeholder="Enter your password">
                            <span class="fas toggle-password fa-eye-slash"></span>

                        </div>
                        <span style="color:red;" asp-validation-for="Password"></span>
                    </div>
                      <div class="form-login">
                    <div class="alreadyuser">
                    <h4><a href="forgetpassword.html" class="hover-a">Forgot Password?</a></h4>
                    </div>
                    </div>
                    <div class="form-login">
                        <button type="submit" class="btn btn-login">Login</button>
                    </div>
                </form>
                @* <div class="signinform text-center">
                <h4>Don’t have an account? <a href="signup.html" class="hover-a">Sign Up</a></h4>
                </div>
                <div class="form-setlogin">
                <h4>Or sign up with</h4>
                </div>*@
                @*  <div class="form-sociallink">
                <ul>
                <li>
                <a href="javascript:void(0);">
                <img src="~/img/icons/google.png" class="me-2" alt="google">
                Sign Up using Google
                </a>
                </li>
                <li>
                <a href="javascript:void(0);">
                <img src="~/img/icons/facebook.png" class="me-2" alt="google">
                Sign Up using Facebook
                </a>
                </li>
                </ul>
                </div>*@
            </div>
        </div>
        <div class="login-img">
            <img src="~/img/login.jpg" alt="img">
        </div>
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var errorMessage = document.getElementById('toastrErrorMessage').value;

        if (errorMessage) {
            toastr.error(errorMessage, "User Not Found", {
                closeButton: true,
                progressBar: true,
                positionClass: 'toast-bottom-right',
                preventDuplicates: true,
                showDuration: '300',
                hideDuration: '1000',
                timeOut: '5000',
                extendedTimeOut: '1000',
                showEasing: 'swing',
                hideEasing: 'linear',
                showMethod: 'fadeIn',
                hideMethod: 'fadeOut'
            });
        }
    });


    function submitForm() {
        // Perform form submission using JavaScript
        var form = document.getElementById("loginForm");

        // Check if the form is valid
        if (form.checkValidity()) {
            // Simulate form submission
            // Replace this with your actual form submission logic
            // For example, you can use AJAX to submit the form data to the server
            toastr.success('Form submitted successfully!', 'Success');
        } else {
            // Display Toastr messages for validation errors
            toastr.error('Please correct the form errors before submitting.', 'Error');
        }
    }


</script>