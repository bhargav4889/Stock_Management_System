        <div class="col-lg-6 col-sm-12 col-12 d-flex">
            <div class="popover-list">
            </div>
            <div class="card flex-fill">
                <div class="card-header pb-0 d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">
                        <span tabindex="0" role="button" class="text-decoration-none" style="color:black; cursor:pointer;" data-bs-toggle="popover" data-bs-placement="right" data-bs-trigger="focus" data-bs-content="Recent Actions Show To Notify Which Process Happened !">
                            <i class="fas fa-clock"></i> Recent Actions
                        </span>
                    </h4>
                </div>
                <!-- Start of scrollable area -->
                <div class="card-body overflow-auto" style="max-height: 50vh;">
                    <!-- Adjust max-height as needed -->
                    @if (Model.recent_Actions_With_Info != null && Model.recent_Actions_With_Info.Any())
                    {
                        var today = DateTime.Today;
                        var yesterday = today.AddDays(-1);
                        bool todayTasksExist = Model.recent_Actions_With_Info.Any(a => a.Rec_Act_Create.Date == today);
                        bool yesterdayTasksExist = Model.recent_Actions_With_Info.Any(a => a.Rec_Act_Create.Date == yesterday);

                        if (todayTasksExist || yesterdayTasksExist)
                        {
                            <ul class="list-group list-group-flush">
                                @if (todayTasksExist)
                                {
                                    <li class="list-group-item">
                                        <div class="d-flex justify-content-between">
                                            <div class="me-2" style="font-style:initial; font-weight:bold; color:lightslategrey;">Today</div>
                                            <hr class="flex-grow-1 my-auto">
                                        </div>
                                    </li>
                                    @foreach (var action in Model.recent_Actions_With_Info.Where(a => a.Rec_Act_Create.Date == today))
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <div class="d-flex align-items-center" style="gap: 8px;">
                                                <i class="fas fa-bell"></i>
                                                <span>@action.Rec_Act_Info</span>
                                            </div>
                                            <span class="text-muted">@action.Rec_Act_Create.ToString("hh:mm tt")</span>
                                        </li>
                                    }
                                }

                                @if (yesterdayTasksExist)
                                {
                                    @if (todayTasksExist)
                                    {
                                        <li><br /></li> <!-- Optional: Spacer if both today and yesterday tasks exist -->
                                    }
                                    <li class="list-group-item">
                                        <div class="d-flex justify-content-between">
                                            <div class="me-2" style="font-style:initial; font-weight:bold; color:lightslategrey;">Yesterday</div>
                                            <hr class="flex-grow-1 my-auto">
                                        </div>
                                    </li>
                                    @foreach (var action in Model.recent_Actions_With_Info.Where(a => a.Rec_Act_Create.Date == yesterday))
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <div class="d-flex align-items-center" style="gap: 8px;">
                                                <i class="fas fa-bell"></i>
                                                <span>@action.Rec_Act_Info</span>
                                            </div>
                                            <span class="text-muted">@action.Rec_Act_Create.ToString("hh:mm tt")</span>
                                        </li>
                                    }
                                }
                            </ul>
                        }
                        else
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fa fa-times-circle"></i> No Recent Tasks
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fa fa-times-circle"></i> No Recent Tasks
                        </div>
                    }
                </div>
                <!-- End of scrollable area -->
            </div>
        </div>





        <div class="col-lg-6 col-sm-12 col-12 d-flex">
            <div class="card flex-fill">
                <div class="card-header pb-0 d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">
                        <span tabindex="0" role="button" class="text-decoration-none" style="color:black; cursor:pointer;" data-bs-toggle="popover" data-bs-placement="right" data-bs-trigger="focus" data-bs-content="Details about pending customer payments.">
                            <i class="fa fa-cogs"></i> Pending Customers Payment
                        </span>
                    </h4>
                </div>

                @if (Model.recent_Actions_With_Info != null)
                {
                    <div class="table-responsive dataview">
                        <table class="table datatable">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Name</th>
                                    <th>Product</th>
                                    <th>Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var customers_Payment_Sort_List in Model.Pending_Customers_Payment_Sort_List)
                                {
                                    <tr onclick="submitForm(this)">
                                        <form asp-action="Account_Details" asp-controller="Account" method="get">
                                            <input type="hidden" value="@UrlEncryptor.Encrypt(Convert.ToString(customers_Payment_Sort_List.CustomerId))" name="Customer_ID" />
                                        </form>
                                        <td>@customers_Payment_Sort_List.StockDate.ToString("dd/MM/yy")</td>
                                        <td>@customers_Payment_Sort_List.CustomerName</td>
                                        <td>@customers_Payment_Sort_List.ProductName</td>
                                        <td>@customers_Payment_Sort_List.TotalPrice</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="card-body">
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fa fa-times-circle"></i> No Payments Pending
                        </div>
                    </div>
                }
            </div>
        </div>




        <div class="col-lg-6 col-sm-12 col-12 d-flex">
            <div class="card flex-fill">
                <div class="card-header pb-0 d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">
                        <span tabindex="0" role="button" class="text-decoration-none" style="color:black; cursor:pointer;" data-bs-toggle="popover" data-bs-placement="right" data-bs-trigger="focus" data-bs-content="Don't forget to complete your payments to avoid service interruptions.">
                            <i class="fas fa-bell"></i>
                            Remainder
                        </span>
                    </h4>
                </div>

                <div class="card-body">

                    <div class="alert alert-primary alert-dismissible fade show" role="alert">
                        <i class="fa fa-bell-slash"></i>  No Set Any  Remainder

                    </div>


                    @* <ul class="list-unstyled">
                    <li class="d-flex align-items-center mb-3" style="border: 1px solid #ccc; padding: 10px; border-radius: 5px;">


                    </li>

                    </ul>*@
