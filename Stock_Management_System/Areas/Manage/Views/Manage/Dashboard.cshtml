            </div>
        </div>
    </div>
</div>



<script>
    function submitForm(clickedRow) {
        // Find the form related to the clicked row. This example assumes the form is a sibling or child of the clicked row.
        // You might need to adjust the selector based on your actual HTML structure.
        var form = clickedRow.querySelector("form");
        if (form) {
            form.submit(); // Submit the found form
        } else {
            console.error("Form not found");
        }
    }

</script>