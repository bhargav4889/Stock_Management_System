@using System.Globalization
﻿@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Details Stock";


}
@model Stock_Management_System.Areas.Stocks.Models.Purchase_Stock;

<link rel="stylesheet" href="~/css/detailsviewtablestyle.css">

<script src="/js/bundle/sale/details-bundle.js"></script>

<div class="container">
    <br />
    <div class="row">
        <!-- Left side - Back link -->
        <div class="col-2">
            <a asp-action="Stocks" asp-controller="Stock" class="text-decoration-none">
                <i class="fa fa-arrow-left" style="color:green; transform: scale(1.25);"> </i>
            </a>
        </div>

        <!-- Center - Invoice Details -->
        <div class="col-8 text-center">
            <h5>Stock Details</h5>
        </div>


        
        <!-- Right side - Download button -->
        <div class="col-2 text-right">
            <a role="button" id="downloadsStockDetailsImage" class="btn icon-button">
                <i class="fa fa-download" aria-hidden="true" style="color:green; transform: scale(1.25);"></i>
            </a>
        </div>



        <br />
        <div class="table-responsive scrollable-table table-responsive-sm">
            <table class="table">

                <tr>
                    <th>Date</th>
                    <td id="purchaseStockDate">@Model.PurchaseStockDate.ToString("dd/MM/yyyy")</td>
                </tr>
                <tr>
                    <th>Customer Name</th>
                    <td id="customerName">@Model.CustomerName</td>
                </tr>


                <tr>
                    <th>Customer Type</th>
                    <td>@Model.CustomerType</td>
                </tr>


                <tr>
                    <th>Product Name</th>
                    <td id="productName">@Model.ProductName</td>
                </tr>

                <tr>
                    <th>Goods Taken Loaction</th>
                    <td>@Model.PurchaseStockLocation</td>
                </tr>

                <tr>
                    <th>Bag</th>
                    <td>@(Model.Bags == 0 ? "--" : Model.Bags.ToString()) </td>
                </tr>
                <tr>
                    <th>Bag Per Kg</th>
                    <td>@(Model.BagPerKg == 0 ? "--" : Model.BagPerKg.ToString()) </td>
                </tr>
                <tr>
                    <th>Weight</th>
                    <td>@Model?.TotalWeight</td>
                </tr>
                <tr>
                    <th>Product Price(₹)</th>
                    <td>@Model?.ProductPrice.ToString("C", new CultureInfo("hi-IN"))</td>
                </tr>
                <tr>
                    <th>Total Price(₹)</th>
                    <td>@Model?.TotalPrice.ToString("C", new CultureInfo("hi-IN"))</td>
                </tr>
                <tr>
                    <th>Vehicle Type</th>
                    <td>@Model?.VehicleName</td>
                </tr>
                <tr>
                    <th>Vehicle No.</th>
                    <td>@Model?.VehicleNo</td>
                </tr>
                <tr>
                    <th>Driver Name</th>
                    <td>@Model?.DriverName</td>
                </tr>
                <tr>
                    <th>Tolat Name</th>
                    <td>@Model?.TolatName</td>
                </tr>
                <tr>
                    <th>Stock Grade</th>
                    <td>@(string.IsNullOrWhiteSpace(Model?.ProductGrade) ? "--" : Model?.ProductGrade)</td>
                </tr>




            </table>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.3.3/html2canvas.min.js"></script>

@section Scripts {
    <script src="/js/bundle/stock/details-bundle.js"></script>
}